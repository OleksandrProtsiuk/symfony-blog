{% extends 'base.html.twig' %}

{% block title %}Post {{  post.title }}{% endblock %}

{% block body %}
    <hr>
    <div class="row">
        <div class="col-10">
            <h1>{{  post.title }}</h1>
        </div>
       <div class="col-2">
           <button class="btn btn-primary btn-sm btn-block" type="button" data-toggle="collapse" data-target="#toolbar" aria-expanded="false" aria-controls="collapseExample">
               ToolBar
           </button>
       </div>
    </div>
    <div class="collapse" id="toolbar">
        <div class="card card-body">
            <div class="row">
                <div class="col">
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-info btn-sm btn-block">Edit</a>
                </div>
                <div class="col">
                    {{ include('post/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

        <br/>
    <small><b>Created by: </b><a href="{{ path('user_show', {'id': post.getUserId}) }}">{{ post.getUserId.name }}</a></small>
    <small><b>Tags:</b>
        {% if post.tags is defined and post.tags is not empty %}
            {% for tag in post.tags %}
                <a href="{{ path('tag_show', {'id': tag.id}) }}">{{ tag.name }}</a>
            {% endfor %}
        {% else %}
            <i>NoTagsAdded</i>
        {% endif %}
    </small>

    <br/>
    <hr>

    <p>{{ post.body | raw }}</p>

    <section id="vote">
        <hr>
        <h4>Minds:</h4>
        <div class="row">
            <div class="col-6">
             {% if post.reactions is defined and post.reactions is not empty %}
                <table class="table text-center">
                    <thead>
                    <tr>
                        <td><img src="{{ asset('build/img/veryBad.png') }}" height="35" alt="very bad"></td>
                        <td><img src="{{ asset('build/img/bad.png') }}" height="35" alt="bad"></td>
                        <td><img src="{{ asset('build/img/like.png') }}" height="35" alt="like"></td>
                        <td><img src="{{ asset('build/img/good.png') }}" height="35" alt="good"></td>
                        <td><img src="{{ asset('build/img/veryGood.png') }}" height="35" alt="very good"></td>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ post.getReactions('very bad')|length }}</td>
                        <td>{{ post.getReactions('bad')|length }}</td>
                        <td>{{ post.getReactions('like')|length }}</td>
                        <td>{{ post.getReactions('good')|length }}</td>
                        <td>{{ post.getReactions('very good')|length }}</td>
                    </tr>
                    </tbody>
                </table>
                 <p><b>Total votes: </b> {{ post.getReactions()|length }} </p>
                {% else %}
                    <i>No reactions yet...</i>
                {% endif %}
            </div>
            <div class="col-6">
                {{ include('post/_vote_toolbar.html.twig') }}
            </div>
        </div>
    </section>

    <section id="comments">
        <hr>
        <div class="row">
            <div class="col-6">
                <h4>Comments:</h4>
                {% for comment in comments %}
                    <p>
                        <small><b>User: </b>{{ comment.getUserId.name }}</small>
                        {{ include('post/_comment_toolbar.html.twig') }}
                    </p>
                    <a href="#{{ comment.id }}"  hidden>Â¶</a>
                    {{ comment.body | raw }}
                    <hr>
                {% else %}
                    <p><b>There is no comments, yet...</b></p>
                {% endfor %}
            </div>
            <div class="col-6">
                {{ include('comment/_form.html.twig', {'button_label': 'Add Comment'}) }}
            </div>
        </div>
        <hr>
    </section>

{% endblock %}
