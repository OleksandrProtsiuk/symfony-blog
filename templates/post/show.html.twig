{% extends 'base.html.twig' %}

{% block title %}Post {{  post.title }}{% endblock %}

{% block body %}
    <hr>
    <div class="row">
        <div class="col-10">
            <h1>{{  post.title }}</h1>
        </div>
       <div class="col-2">
           <button class="btn btn-primary btn-sm btn-block" type="button" data-toggle="collapse" data-target="#toolbar" aria-expanded="false" aria-controls="collapseExample">
               ToolBar
           </button>
       </div>
    </div>
    <div class="collapse" id="toolbar">
        <div class="card card-body">
            <div class="row">
                <div class="col">
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-info btn-sm btn-block">Edit</a>
                </div>
                <div class="col">
                    {{ include('post/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

        <br/>
    <small><b>Created by:</b> <a href="/user/{{ post.getUserId }}">{{ post.getUserId.name }}</a></small>
    <small><b>Tags:</b>
        {% if post.tags is defined and post.tags is not empty %}
            {% for tag in post.tags %}
                {{ tag.name }}
            {% endfor %}
        {% else %}
            <i>NoTagsAdded</i>
        {% endif %}
    </small>

    <br/>
    <hr>

    <p>{{ post.body | raw }}</p>

    <hr>
    <section id="comments">
        <div class="row">
            <div class="col-6">
                <h4>Comments:</h4>
                {% for comment in comments %}
                    <p>
                        <small><b>User: </b>{{ comment.getUserId.name }}</small>
                        {{ include('post/_comment_toolbar.html.twig') }}
                    </p>
                    {{ comment.body | raw }}
                    <hr>
                {% else %}
                    <p><b>There is no comments, yet...</b></p>
                {% endfor %}
            </div>
            <div class="col-6">
                {{ include('comment/_form.html.twig', {'button_label': 'Add Comment'}) }}
            </div>
        </div>
        <hr>
    </section>

{% endblock %}
