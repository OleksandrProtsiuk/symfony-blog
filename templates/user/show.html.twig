{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Hello {{ user.name }}</h1>
    <div class="row">
        <div class="col-6">
            <table class="table">
                <tbody>
                <tr>
                    <th>Info</th>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Login</th>
                    <td>{{ user.login }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                </tbody>
            </table>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-info btn-block">edit</a>
        </div>

        <div class="col-6">
            <a href="{{ path('post_new') }}" class="btn btn-bg btn-block btn-info">New Post</a>
            <br/>
            <div class="row">
                <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#post" aria-expanded="false" aria-controls="collapseExample">
                    <b>Posts:</b>
                </button>

                <div class="collapse" id="post">
                    <div class="card card-body">
                        {% for post in user.posts %}
                            <div class="col">
                                <a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a>

                                <a href="{{ path('post_edit', {'id': post.id}) }}">
                                    <img src='{{ asset('build/img/edit.svg') }}' height="20"/>
                                </a>
                            </div>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="row">
                <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#comment" aria-expanded="false" aria-controls="collapseExample">
                    <b>Comments:</b>
                </button>

                <div class="collapse" id="comment">
                    <div class="card card-body">
                        {% for comment in user.comments %}
                            <a href="{{ path('post_show', {'id': comment.postId}) }}">
                                {{ comment.body|raw}}
                            </a>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <td>
        {{ include('user/_delete_form.html.twig') }}
    </td>
{% endblock %}
